/* pages/detail/detail.wxss */

.slides{
  height:380rpx;

}
.slides .item image{
  width:100%;
  height:100%;
}

.info{
  padding:15rpx 20rpx;
  display: flex;
  flex-direction: column;
  background-color:#fff;
  margin-bottom:20rpx;
}
.info .name{
  color:#234;
  font-size:50rpx;
}
.info .phone,
.info .address,
.info .hours{
  color:#678;
  font-size:30rpx;
}

.comment{
  background-color:#fff;
  padding:0 15rpx;
}

.commentator{
  border-bottom:1rpx solid #ccc;
  padding:30rpx 10rpx;
  display: flex;
  flex-direction: column;
}
.commentator .score{
  color:coral;
  font-size: 25rpx;
  text-align: right;

}
.commentator .baseInfo{
  display: flex;
  justify-content: space-between;
}
.commentator .baseInfo .name{
  font-size: 45rpx;
}
.commentator .baseInfo .data{
  font-size: 30rpx;
  color:#ccc;
}
.commentator .content{
  font-size: 35rpx;
}

.comments .pics image {
  width: 10rpx;
  height: 10rpx;
  margin: 10rpx;
}
